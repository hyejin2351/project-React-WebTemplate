{
  "name": "was-starter",
  "version": "0.1.0",
  "description": "Web Application Server Starter",
  "engines": {
    "node": ">=6.9.4"
  },
  "scripts": {
    "dev": "babel-node src/server/index.js",
    "nodemon": "nodemon src/server/index.js --exec babel-node",
    "debug": "DEBUG=app:*,-app:HNDataAPI npm run dev",
    "debug-all": "DEBUG=* npm run dev",
    "debug-mode": "babel-node --inspect src/server/index.js",
    "graphiql": "babel-node ./src/server/gql/graphiqlServer.js",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore .",
    "lint-fix": "npm run lint -- --fix",
    "build": "npm run build-clean && babel src -d build/app --ignore '**/*__tests__','**/*__mocks__' && cp -R src/client/static build/app/client/static && next build build/app/client",
    "build-clean": "rm -rf build/app",
    "build-next": "next build src/client",
    "postinstall": "yarn build-next",
    "build-docker": "docker build -t clintonwoo/hackernews-react-graphql . && docker run -p 80:3000 --name hackernews-react-graphql clintonwoo/hackernews-react-graphql",
    "build-static-website": "NODE_ENV=production rm -rf build/client/static && next build src/client && next export src/client -o build/client/static",
    "start": "NODE_ENV=production node build/app/server/index.js"
  },
  "author": "peterk",
  "license": "Apache-2.0",
  "keywords": [
    "nextjs",
    "graphql",
    "apollo",
    "react"
  ],
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.10",
    "apollo-client": "^2.2.6",
    "apollo-fetch": "^0.7.0",
    "apollo-link-http": "^1.5.3",
    "apollo-server-express": "^1.3.2",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.17.2",
    "cookie": "^0.3.1",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-session": "^1.15.5",
    "firebase": "^4.3.1",
    "graphql": "^0.13.1",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.21.0",
    "isomorphic-fetch": "^2.2.1",
    "lru-cache": "^4.1.1",
    "mongoose": "^5.1.2",
    "morgan": "^1.9.0",
    "next": "^5.1.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-render-html": "^0.6.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.4",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "jest": "^22.4.2",
    "jest-enzyme": "^6.0.0",
    "mockdate": "^2.0.2",
    "nodemon": "^1.12.0",
    "react-test-renderer": "^16.0.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test-setup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "src/.next*",
      "src/pages*"
    ],
    "delay": "10",
    "verbose": false,
    "watch": [
      "src"
    ]
  }
}
